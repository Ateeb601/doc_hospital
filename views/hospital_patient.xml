<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Form view definition for hospital.patient -->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field> <!-- Name of the view -->
        <field name="model">hospital.patient</field> <!-- Model this view belongs to -->
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Add a button in the form header to trigger the "print_excel" method -->
                    <button name="print_excel" string="Print Excel Report" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <!-- Title area, showing the 'ref' field (patient reference) as the header -->
                    <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="1"/>
                        </h1>
                    </div>

                    <!-- Main patient information section -->
                    <group>
                        <group>
                            <field name="name"/> <!-- Patient name -->
                            <field name="is_child"/> <!-- Is Child? Checkbox -->
                            <field name="age"/> <!-- Age -->
                        </group>
                        <group>
                            <field name="gender"/> <!-- Gender -->
                            <field name="mobile"/> <!-- Mobile number -->
                            <field name="email"/> <!-- Email address -->
                        </group>
                    </group>

                    <!-- Additional patient information section -->
                    <group>
                        <group>
                            <field name="address"/> <!-- Address -->
                            <field name="dob"/> <!-- Date of Birth -->
                            <field name="amount"/> <!-- Amount (Billing or some other purpose) -->
                        </group>
                        <group>
                            <field name="capitalized_name" readonly="1"/> <!-- Capitalized Name (Computed field) -->
                            <field name="lab_id"/> <!-- Related Lab -->
                            <field name="tag_ids" widget="many2many_tags"/> <!-- Tags (Many2many tags widget) -->
                        </group>
                    </group>

                    <!-- Notebook (tabbed section) for additional information -->
                    <notebook>
                        <page string="Pharmacy">
                            <field name="pharmacy_line_ids">
                                <tree editable="top">
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="price_unit"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="qty"/>
                                        <field name="price_unit"/>
                                        <field name="tag_id"/>
                                    </group>
                                </form>
                            </field>
                            <group>
                                <field name="total_products" readonly="1"/>
                                <field name="total_quantity" readonly="1"/>
                                <field name="total_price" readonly="1"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>

                <!-- Chatter (mail.thread) section at the bottom of the form -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/> <!-- Followers of the record -->
<!--                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/> &lt;!&ndash; Log notes, messages &ndash;&gt;-->
                </div>
            </form>
        </field>
    </record>

    <!-- Tree view definition for hospital.patient (list view) -->
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/> <!-- Reference -->
                <field name="name"/> <!-- Name -->
                <field name="age"/> <!-- Age -->
                <field name="gender"/> <!-- Gender -->
                <field name="mobile"/> <!-- Mobile -->
                <field name="email"/> <!-- Email -->
                <field name="address"/> <!-- Address -->
                <field name="dob"/> <!-- Date of Birth -->
                <field name="amount"/> <!-- Amount -->
                <field name="capitalized_name"/> <!-- Capitalized Name -->
            </tree>
        </field>
    </record>

    <!-- Search view definition for hospital.patient -->
    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <!-- Fields that can be searched (search filters) -->
                <field name="ref"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="mobile"/>
                <field name="email"/>
                <field name="address"/>
                <field name="dob"/>
                <field name="amount"/>
                <field name="capitalized_name"/>
            </search>
        </field>
    </record>

    <!-- Action to open the hospital.patient views (tree and form) -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu item to access the Patients action under the hospital operations menu -->
    <menuitem id="menu_patients" name="Patients" parent="menu_hospital_operations" action="action_hospital_patient"/>
</odoo>