<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ======================== Form View for Hospital Doctor ======================== -->
    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Button to trigger Excel report generation -->
                    <button name="print_excel" string="Print Excel Report" type="object" class="oe_highlight"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="full_name" readonly="1"/>
                        </group>
                        <group>
                            <field name="mobile"/>
                            <field name="email"/>
                            <field name="specialization"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="dob"/>
                            <field name="age" readonly="1"/>
                        </group>
                        <group>
                            <field name="doctor_type" readonly="1"/>
                            <field name="currency_id"/>
                            <field name="retail_price"/>
                        </group>
                    </group>

                    <group string="Hierarchy">
                        <field name="parent_id"/>
                        <field name="child_ids" widget="many2many_tags" readonly="1"/>
                    </group>
                </sheet>

                <!-- Chatter Section (for messaging and followers if mail.thread is enabled on the model) -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ======================== Tree View for Hospital Doctor ======================== -->
    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="full_name"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="doctor_type"/>
                <field name="email"/>
                <field name="specialization"/>
                <field name="mobile"/>
                <field name="currency_id"/>
                <field name="retail_price"/>
            </tree>
        </field>
    </record>

    <!-- ======================== Action for Hospital Doctor ======================== -->
    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ======================== Menu Items ======================== -->
    <menuitem id="menu_hospital_doctor_root" name="Doctor" sequence="10" action="action_hospital_doctor"/>

</odoo>
