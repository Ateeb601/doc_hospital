<odoo>
    <data noupdate="0">

        <!-- Hospital User Group -->
        <record id="group_hospital_user" model="res.groups">
            <field name="name">Hospital User</field>
            <field name="category_id" ref="base.module_category_hospital"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Hospital Manager Group (inherits from User) -->
        <record id="group_hospital_manager" model="res.groups">
            <field name="name">Hospital Manager</field>
            <field name="category_id" ref="base.module_category_hospital"/>
            <field name="implied_ids" eval="[(4, ref('doc_hospital.group_hospital_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="access_ir_model_custom" model="ir.model.access">
            <field name="name">access.ir.model.custom</field>
            <field name="model_id" ref="base.model_ir_model"/>
            <field name="group_id" ref="base.group_system"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>


    </data>
</odoo>
